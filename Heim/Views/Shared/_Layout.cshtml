<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - @Html.Settings("SiteName")</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @System.Web.Optimization.Styles.Render("~/Content/css")
        @System.Web.Optimization.Styles.Render("~/Content/main")
        @System.Web.Optimization.Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
		<div id="main-wrapper">
			<header>
				<div class="content-wrapper">

					<nav>
						<ul class="menu steps">
							<li class="selected">
								<a class="step-home" href="#home" title="Home">Home</a>
							</li>
							<li>
								<a class="step-furniture" href="#furniture" title="Furnitures">Furnitures</a>
							</li>
							<li>
								<a class="step-painting" href="#painting" title="Painting">Painting</a>
							</li>
						</ul>
					</nav>

					<div id="header-upper">
						<div class="float-left">
							<div class="site-logo">
								<img src="/Images/site_logo.png" alt="@Html.Settings("SiteName")" />
							</div>
						</div>

						<div class="float-right">
							<div id="signin">
								@Html.Partial("_SigninPartial")
							</div>
						</div>
					</div>

					<div class="break"></div>
					<div id="header-lower">
						<h1>@ViewBag.Title</h1>

						<div class="float-right" id="page-infos">
							@RenderSection("pageinfos", required: false)
						</div>

						<div class="user-actions">
							@RenderSection("actions", required: false)
						</div>
					</div>
				</div>
			</header>

			<div id="body">
				@RenderSection("featured", required: false)
				<section class="content-wrapper main-content clear-fix">
					@RenderBody()
				</section>
			</div>
			<footer>
				<div class="content-wrapper">
					<div class="float-left">
						@*<p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>*@
					</div>
				</div>
			</footer>

			@System.Web.Optimization.Scripts.Render("~/bundles/jquery")
			@RenderSection("scripts", required: false)
			
		</div>
	</body>
</html>
